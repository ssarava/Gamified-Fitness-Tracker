<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Exercise"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <!-- GRID OF EXERCISES -->
        <GridLayout
            android:id="@+id/exerciseGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false">

            <!-- SQUAT -->
            <LinearLayout
                android:id="@+id/btnSquat"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_margin="10dp"
                android:background="@drawable/white_box">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/squats"
                    android:contentDescription="Squat exercise image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Squat"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- PUSH UP -->
            <LinearLayout
                android:id="@+id/btnPushUp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_margin="10dp"
                android:background="@drawable/white_box">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/push_up"
                    android:contentDescription="Push up exercise image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Push Up"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- RUNNING -->
            <LinearLayout
                android:id="@+id/btnRun"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_margin="10dp"
                android:background="@drawable/white_box">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/running"
                    android:contentDescription="Running exercise image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Running"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- BENCH PRESS -->
            <LinearLayout
                android:id="@+id/btnBench"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_margin="10dp"
                android:background="@drawable/white_box">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/bench"
                    android:contentDescription="Bench press exercise image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bench Press"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- CURL -->
            <LinearLayout
                android:id="@+id/btnCurl"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_margin="10dp"
                android:background="@drawable/white_box">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/curl"
                    android:contentDescription="Curl exercise image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Curl"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- OTHER WORKOUT (6th tile) -->
            <LinearLayout
                android:id="@+id/btnOther"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_margin="10dp"
                android:background="@drawable/white_box">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/swimming"
                    android:contentDescription="Other workout exercise image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other Exercise"
                    android:textStyle="bold" />
            </LinearLayout>

        </GridLayout>

    </LinearLayout>
</ScrollView>
